{
  "tasks": {
    "dev": "deno run --allow-net --allow-env --watch main.ts",
    "start": "deno run --allow-net --allow-env main.ts",
    "test": "deno test --allow-net"
  },
  "imports": {
    "@/": "./",
    "marked": "https://esm.sh/marked@9.1.6",
    "marked/": "https://esm.sh/marked@9.1.6/",
    "std/": "https://deno.land/std@0.208.0/"
  },
  "compilerOptions": {
    "strict": true,
    "useDefineForClassFields": true,
    "allowJs": false,
    "lib": ["deno.window", "dom", "esnext"],
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "isolatedModules": true,
    "preserveConstEnums": true,
    "removeComments": false
  },
  "lint": {
    "files": {
      "include": ["./"]
    },
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["./"]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
}